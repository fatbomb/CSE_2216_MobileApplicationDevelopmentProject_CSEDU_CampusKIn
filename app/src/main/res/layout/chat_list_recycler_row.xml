<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/chat_list"
    android:layout_margin="7dp"
    android:elevation="3dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:src="@drawable/human"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:id="@+id/profile_pic_image_view"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/kin_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kin Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/last_msg_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Message Time"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/last_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Message"
            android:textColor="@color/black"/>
    </LinearLayout>


</LinearLayout>