<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="-2dp">

    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_sender"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/left_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="your message"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/otherSentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sentTime"
            android:textColor="#D3D3D3"
            android:textSize="9sp"/>




    </LinearLayout>
    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_receiver"
        android:padding="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/right_chat_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="my message"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:orientation="vertical"
            android:layout_marginRight="0dp"
            >

           <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp">

                <ImageView
                    android:id="@+id/msg_sent_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/sent_icon"/>

                <ImageView
                    android:id="@+id/msg_read_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/read_icon" />


           </RelativeLayout>

            <TextView
                android:id="@+id/mySentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sentTime"
                android:textColor="#D3D3D3"
                android:textSize="9sp"/>


        </LinearLayout>



    </LinearLayout>

</RelativeLayout>