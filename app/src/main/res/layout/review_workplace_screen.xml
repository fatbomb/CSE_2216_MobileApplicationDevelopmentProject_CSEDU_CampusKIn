<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/top_relative_layout"
        android:background="@drawable/top_background">

        <LinearLayout
            android:id="@+id/top_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="Review Your Workplace Anonymously"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="27sp"
                android:textStyle="bold"

                />
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_linear_layout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/card_view_ackgroud"
                android:orientation="vertical">


                <EditText
                    android:id="@+id/workplace_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:hint="Name of your workplace"
                    android:paddingStart="10dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/started_working"
                            android:layout_width="150dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="4dp"
                            android:background="@drawable/edit_text_background"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/black"
                            android:hint="Started"
                            android:paddingStart="15dp"
                            android:inputType="none"
                            android:focusable="false"
                            android:onClick="showTimePickerDialog"/>

                        <EditText
                            android:id="@+id/ended_working"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@+id/started_working"
                            android:background="@drawable/edit_text_background"
                            android:drawablePadding="10dp"
                            android:drawableTint="@color/black"
                            android:hint="Ended"
                            android:paddingStart="15dp"
                            android:inputType="none"
                            android:focusable="false"
                            android:onClick="showTimePickerDialog"/>
                    </RelativeLayout>


                </LinearLayout>

                <EditText
                    android:id="@+id/workingStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:hint="Working Status"
                    android:paddingStart="10dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp" />

                <EditText
                    android:id="@+id/prof_boss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:hint="Your Professor/Boss name"
                    android:paddingStart="10dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp" />

                <EditText
                    android:id="@+id/workplace_review"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:hint="Write review on your workplace"
                    android:paddingStart="10dp" />


                <EditText
                    android:id="@+id/prof_boss_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:hint="Write review on your Prof/Boss"
                    android:maxLines="7"
                    android:paddingStart="10dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp" />



                <EditText
                    android:id="@+id/linkedin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/edit_text_background"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:hint="LinkedIn of your Prof/Boss"
                    android:maxLines="7"
                    android:paddingStart="10dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/update"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_background"
                            android:text="Update"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/cancel"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="10dp"
                            android:background="@drawable/button_background"
                            android:text="Cancel"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>