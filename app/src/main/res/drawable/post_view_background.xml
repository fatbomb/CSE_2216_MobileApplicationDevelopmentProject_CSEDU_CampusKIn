<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Colored rectangle-->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="25dp"
                android:height="10dp" />
            <solid android:color="#FEF1FF" />
        </shape>
    </item>

    <!-- This rectangle for the left side -->
    <!-- Its color should be the same as layout's background -->
    <item
        android:right="25dp"
        android:left="-25dp"
        android:top="-25dp"
        android:bottom="-25dp">
        <rotate
            android:fromDegrees="135">
            <shape android:shape="rectangle">
                <solid android:color="#FEFFD3" />

                <corners
                    android:topLeftRadius="20dp" />

            </shape>
        </rotate>
    </item>

    <!-- This rectangle for the right side -->
    <!-- Their color should be the same as layout's background -->
    <item
        android:right="-25dp"
        android:left="25dp"
        android:top="-25dp"
        android:bottom="-25dp">
        <rotate
            android:fromDegrees="135">
            <shape android:shape="rectangle">
                <solid android:color="#CDB6DA" />
                <corners
                    android:bottomRightRadius="20dp"/>
            </shape>
        </rotate>
    </item>

</layer-list>
